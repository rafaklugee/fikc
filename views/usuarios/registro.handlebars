<style>
    .btn-hover {
        transition: transform 0.2s ease-in-out;
    }

    .btn-hover:hover {
        transform: scale(1.05);
    }

    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    .card-body {
        padding: 20px;
    }

    .form-control {
        margin-bottom: 15px;
    }

    .container-login {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f8f9fa;
    }

    h4 {
        text-align: center;
        margin-bottom: 20px;
    }

    .alert {
        margin-bottom: 20px;
    }

    .btn-container {
        display: flex;
        justify-content: center;
    }

