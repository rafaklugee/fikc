<style>
    .btn-hover {
        transition: transform 0.2s ease-in-out;
    }

    .btn-hover:hover {
        transform: scale(1.05);
    }
</style>

<div class="container mt-5">
    <h2 class="text-center">Lista de Postagens</h2>
    <hr>
    <div class="text-center mb-4">
        <a href="/postagem/add" class="btn btn-primary btn-hover">Nova Postagem</a>
    </div>

    {{#each postagens}}
        <div class="card mt-4 shadow-sm">
            <div class="card-body">
                <h4 class="card-title">{{titulo}}</h4>
                <p class="card-text">Descrição: {{descricao}}</p>
                <small class="text-muted">Data: {{data}}</small><br>
                <div class="mt-3">
                    <a href="/postagem/edit/{{id}}" class="btn btn-success btn-hover">Editar Postagem</a>
                    <a href="/postagem/deletar/{{id}}" class="btn btn-danger btn-hover">Deletar Postagem</a>
                </div>
            </div>
        </div>
    {{else}}
        <p class="text-center text-muted">Nenhuma postagem registrada!</p>
    {{/each}}
</div>