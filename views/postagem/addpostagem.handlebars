{{> _msg}}
<style>
    .btn-hover {
        transition: transform 0.2s ease-in-out;
    }

    .btn-hover:hover {
        transform: scale(1.05);
    }
</style>

{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">Nova postagem:</h4>
            <form action="/postagem/nova" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="titulo">Título:</label>
                    <input type="text" name="titulo" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="slug">Slug:</label>
                    <input type="text" name="slug" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="descricao">Descrição:</label>
                    <input type="text" name="descricao" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="conteudo">Conteúdo:</label>
                    <textarea name="conteudo" class="form-control" rows="5" required></textarea>
                </div>
                <div class="form-group">
                    <label>Imagem:</label>
                    <input type="file" name="imagem" accept="image/*">
                </div>
                <button class="btn btn-primary btn-hover mt-3" type="submit">Criar postagem</button>
            </form>
        </div>
    </div>
</div>